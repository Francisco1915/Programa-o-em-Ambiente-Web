<!DOCTYPE html>

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
        integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="/stylesheets/cssMain.css">
    <link rel="icon" type="image/x-icon" href="/images/book.png">

</head>

<body>

    <!-- Header-->
    <header id="header">
        <nav class="d-flex">
            <div class="margin-left">
                <a href="/" class="nav-brand text-dark">Home</a>
            </div>
            <div class="container">
                <div class="text-center">
                    <a href="/orders" class="nav-brand text-dark">Order Views</a>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Site-->
    <main id="site-main">
        <div class="container">
            <div class="box-nav d-flex justify-between margin-bottom">
                <div class="filter">
                    <a href="/employee"><i class="fas fa-angle-double-left"></i> All Employee</a>
                </div>
            </div>
            <% if (list.results && list.results.length) { %>
                <div class="row row-cols-2">
                    <% list.results.forEach(function (orders) { %>
                        <div class="box-nav d-flex justify-between margin-bottom border-shadow col">
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">ClientEmail: <%= orders.clientEmail %>
                                </li>
                                <li class="list-group-item">EmployeeEmail: <%=orders.employeeEmail%>
                                </li>
                                <li class="list-group-item">PriceOrder: <%= orders.priceOrder %>
                                </li>
                                <li class="list-group-item">Books:
                                    <ul class="list-group list-group-flush">
                                        <% orders.books.forEach(function (books) { %>
                                            <li class="list-group-item">ISBN: <%= books.isbn %> <br> STATUS: <%= books.status %>
                                            </li>
                                            <% }) %>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                    <% }) %>
                </div>
                <div class="box-nav d-flex justify-between margin-bottom">
                    <% if (list.page - 1 !=0) { %>
                        <a href="/orders?page=<%= list.page - 1 %>&limit=<%= list.limit%>"
                            class="border-shadow">
                            <span class="text-gradient">
                                <i class="fas fa-angle-double-left"></i>
                            </span>
                        </a>
                    <% } else { %>
                            <a href="/orders?page=<%= list.page %>&limit=<%= list.limit%>"
                                class="border-shadow">
                                <span class="text-gradient">
                                    <i class="fas fa-angle-double-left"></i>
                                </span>
                            </a>
                    <% } %>
                                <span class="text-gradient padding-top">
                                    <%= list.page %>
                                </span>
                                <% if (list.page <=list.pages) { %>
                                    <a href="/orders?page=<%= list.page + 1 %>&limit=<%= list.limit%>"
                                        class="border-shadow">
                                        <span class="text-gradient">
                                            <i class="fas fa-angle-double-right"></i>
                                        </span>
                                    </a>
                                <% } else { %>
                                        <a href="/orders?page=<%= list.page %>&limit=<%= list.limit%>"
                                            class="border-shadow">
                                            <span class="text-gradient">
                                                <i class="fas fa-angle-double-right"></i>
                                            </span>
                                        </a>
                                <% } %>
                </div>
            <% } else { %>
                    <div class="box-nav d-flex justify-between margin-left">
                        <ul class="list-group">
                            <li class="list-group-item border-shadow">
                                <h1 class="title">Orders Not Found</h1>
                            </li>
                        </ul>
                    </div>
            <% } %>
        </div>
    </main>
</body>

</html>